<center>
  
<h2>Vote Stats for <%= @movie.movie_title %></h2>

<a href="/">Vote</a>
<br />
<a href="/vote_record">Back</a>
<br />

<p>
<table border="1"> 
  
  <thead>
    <tr>
      <th colspan="2"><%= @movie.movie_title %></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td>Total Rounds:</td>
      <!--Sum of instances of movie.id across upvote_id and downvote_id-->
      <td><%= @movie.total_rounds %></td>
    </tr>
    <tr>
      <td>Upvotes:</td>
      <!--All instances of movie.id in upvote_id-->
      <td><%= @movie.movie_upvotes %></td>
    </tr>
    <tr>
      <td>Downvotes:</td>
      <!--All instances of movie.id in downvote_id-->
      <td><%= @movie.movie_downvotes %></td>
    </tr>
    <tr>
      <td>Win Percent:</td>
      <!--Ratio of movie.id instances of upvote_id and downvote_id-->
      <td><%= @movie.movie_win_percent %> %</td>
    </tr>
    <tr>
      <td>Loss Percent:</td>
      <!--Ratio of movie.id instances of upvote_id and downvote_id-->
      <td><%= @movie.movie_loss_percent %> %</td>
    </tr>
    <tr>
      <td>Button 1 Upvote:</td>
      <!--Instances of movie.id with vote_button == 1-->
      <td><%= @movie.movie_button_1_up %></td>
    </tr>
    <tr>
      <td>Button 2 Upvote:</td>
      <!--Instances of movie.id with vote_button == 2-->
      <td><%= @movie.movie_button_2_up %></td>
    </tr>

    <tr>
      <td>Button 1 Downvote:</td>
      <!--Instances of movie.id with vote_button == 1-->
      <td><%= @movie.movie_button_1_down %></td>
    </tr>
    <tr>
      <td>Button 2 Downvote:</td>
      <!--Instances of movie.id with vote_button == 2-->
      <td><%= @movie.movie_button_2_down %></td>
    </tr>
</table>
</p>

</center>