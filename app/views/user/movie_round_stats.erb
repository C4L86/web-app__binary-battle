<center>
  
<h2>Total Round Stats</h2>

<p>
  <a href="/movie_stats/<%= @movie.id %>">Back</a>
</p>

<p>
  <table border="1">
    <thead>
      <tr>
        <th><%= @movie.movie_title.upcase %></th>
      </tr>
    </thead>

    <tbody>
      
      <% @votes.each do |round| %>
        
          <% if round.upvote_id == @movie.id %>
          <tr>
            <td style="color:green">
              WIN vs <%= Movie.find_by_id(round.downvote_id).movie_title %>
            </td>
          </tr>
          <% elsif round.downvote_id == @movie.id %>
          <tr>
            <td style="color:red">
              LOSS vs <%= Movie.find_by_id(round.upvote_id).movie_title %>
            </td>
          </tr>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</p>

</center>